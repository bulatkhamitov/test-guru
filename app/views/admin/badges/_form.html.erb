<h3>Creating new badge</h3>

<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :icon %><br>
    <%= form.select :icon_url, Badge.icons, prompt: 'Choose image file' %>
  </p>

 <%= form.submit %>

<% end %>
